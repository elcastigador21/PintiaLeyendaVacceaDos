<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFDFD"
    android:backgroundTint="#40EFEFEF"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pintia"
        android:focusedByDefault="true"
        android:foreground="#00FFFFFF">

        <TextView
            android:id="@+id/gamelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="22dp"
            android:fontFamily="cursive"
            android:text="@string/minesweeper"
            android:textColor="#4A34F2"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pintia: La leyenda Vaccea" />

        <Button
            android:id="@+id/Laboratorio"
            android:layout_width="139dp"
            android:layout_height="47dp"
            android:layout_marginStart="265dp"
            android:layout_marginTop="276dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="17dp"
            android:background="#B4FFFFFF"
            android:text="@string/make_custom_board"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/toca_para_jugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_to_play"
            android:textColor="#95000000"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamelabel"
            app:layout_constraintVertical_bias="0.178" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="230dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="378dp"
            android:background="#A9FFFFFF"
            android:text="@string/Sociales"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/Laboratorio"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toca_para_jugar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="230dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="64dp"
            android:background="#FFFFFF"
            android:backgroundTint="#A9FFFFFF"
            android:text="@string/correo"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:background="#FFFFFF"
            android:backgroundTint="#A9FFFFFF"
            android:text="@string/twitter"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="28dp"
            android:background="#FFFFFF"
            android:backgroundTint="#A9FFFFFF"
            android:text="@string/facebook"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>