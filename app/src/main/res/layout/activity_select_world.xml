<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
       <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        android:text="Algo entre comilla2"
        -->
    <Button
        android:id="@+id/mundo1"



        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mundo2"

        app:layout_constraintTop_toTopOf="parent"

        android:text="Mundo 1 - Facil"/>
    <Button
        android:id="@+id/mundo2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@+id/mundo1"
        app:layout_constraintEnd_toStartOf="@+id/mundo3"

        app:layout_constraintTop_toTopOf="parent"

        android:text="Mundo 2 - Medio"/>
    <Button
        android:id="@+id/mundo3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@+id/mundo2"

        app:layout_constraintTop_toTopOf="parent"

        android:text="Mundo 3 - Dificil"/>
</androidx.constraintlayout.widget.ConstraintLayout>